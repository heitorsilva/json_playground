<h1>Vehicle list</h1>
<%= link_to 'Create vehicle', new_vehicle_path %>
<% if @vehicles.size > 0 %>
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.description.name %></td>
          <td>
            <%= link_to 'Edit', edit_vehicle_path(vehicle) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>